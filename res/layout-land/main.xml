<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/mandaImage"
        android:layout_width="292dp"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"
        android:cropToPadding="true"
        android:src="@drawable/manda_logo"/>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <EditText
            android:id="@+id/wikiSearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/wikiButton"
            android:layout_toRightOf="@+id/wikiButton"
            android:hint="@string/search_hint"
            />

        <Button
            android:id="@+id/wikiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="searchWiki"
            android:text="@string/search" />

        <Button
            android:id="@+id/yakatanaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:onClick="yakatanaRecipe"
            android:text="@string/yakatana" />

        <Button
            android:id="@+id/psangerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/yakatanaButton"
           	android:onClick="songList"
            android:text="@string/psanger" />

        <Button
            android:id="@+id/imagesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/psangerButton"
            android:onClick="imageGallery"
            android:text="@string/images" />

    </RelativeLayout>

</LinearLayout>